.image_head {
  width: 300rpx;
  height: 150rpx;
  margin: 30rpx 0;
}

.part1 {
  width: 700rpx;
  height: 270rpx;
  margin: 0 25rpx;
}

.part1 .head {
  width: 700rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.part1 .message {
  font-size: 30rpx;
  color: #707070;
  margin-top: 20rpx;
  width: 700rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.part1 .message .son {
  width: 350rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
 
}
.part1 .message .son .image {
  width:40rpx;
  height:40rpx;
}

.part2{
  width: 700rpx;
  margin: 0 25rpx 80rpx 25rpx;
  display:flex;
  flex-direction: column;
}

.part2 .title{
width:100%;
padding:20rpx 0;
height:45rpx;
line-height: 45rpx;
font-size: 38rpx;
}
.part2 .time{
width:100%;
height:40rpx;
display:flex;
flex-direction: row;
justify-content: space-around;
}
.part2 .content{
width:100%;
color:#707070;
font-size:30rpx;
}
